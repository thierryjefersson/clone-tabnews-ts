{
  "name": "clone-tabnews-ts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:prisma:deploy && next dev",
    "build": "next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "test": "npm run services:up && concurrently -n next,vitest --hide next -k -s command-vitest \"next dev\" \"vitest run\"",
    "test:watch": "vitest watch",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:wait:database": "tsx src/infra/scripts/wait-for-postgres.ts",
    "migrations:prisma:deploy": "dotenv -e .env.development -- npx prisma migrate deploy",
    "lint:eslint:check": "next lint --dir .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "@prisma/client": "6.5.0",
    "async-retry": "1.3.3",
    "next": "15.2.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@commitlint/types": "19.8.0",
    "@secretlint/secretlint-rule-preset-recommend": "9.3.0",
    "@tailwindcss/postcss": "4.1.3",
    "@types/async-retry": "1.4.9",
    "@types/node": "22",
    "@types/react": "19",
    "@types/react-dom": "19",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.4.7",
    "eslint": "9",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "10.1.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "postcss": "8",
    "prettier": "3.5.3",
    "prisma": "6.5.0",
    "secretlint": "9.3.0",
    "tailwindcss": "4.1.3",
    "tsx": "4.19.3",
    "typescript": "5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*": "secretlint --maskSecrets"
  }
}
