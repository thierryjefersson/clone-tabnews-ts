{
  "name": "clone-tabnews-ts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npx prisma migrate deploy && next dev",
    "build": "next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "lint:prettier": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "npm run services:up && npm run wait-for-postgres && npx prisma migrate deploy && concurrently -n next,vitest --hide next -k -s command-vitest 'next dev' 'vitest run'",
    "test:watch": "vitest watch",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "wait-for-postgres": "tsx src/infra/scripts/wait-for-postgres.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "async-retry": "^1.3.3",
    "next": "15.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^8",
    "eslint-config-next": "15.0.4",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "prisma": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
